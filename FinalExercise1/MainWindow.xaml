<Window x:Class="FinalExercise1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FinalExercise1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Orientation="Vertical">
            <Button Click="OpenFileClick"> Open File</Button>
            <TextBlock>DFS Initial Index</TextBlock>
            <TextBox x:Name="DFSInitialIndexBox"> </TextBox>
            <Button Click="DFSClick">Do DFS!</Button>
        </StackPanel>
    </Grid>
</Window>
